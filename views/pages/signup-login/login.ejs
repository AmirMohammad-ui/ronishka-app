<div class="tab-pane fade" id="login" role="tabpanel" aria-labelledby="login-tab">
    <div class="container py-3 text-right">
        <div class="mt-3 bg-black-transparent-3 rounded box-shadow-muted p-3">
            <form id="login-form" class="text-right needs-validation was-validated" novalidate>
                <div class="row">
                    <div class="col-12 my-2">
                        <label for="email_login" class="text-white">ایمیل یا شماره همراه : </label>
                        <input id="email_login" type="text" name="email_login"
                            class="form-control custom-input input-border-bottom-black bg-white-transparent-4 rounded-0"
                            placeholder="email@example.com یا 090012345678" required>
                        <div class="invalid-feedback text-warning">
                            پر کردن این فیلد ضروریست.
                        </div>
                    </div>
                    <div class="col-12 my-2">
                        <label for="password_login" class="text-white">رمز : </label>
                        <input id="password_login" type="password" name="password_login"
                            class="form-control custom-input input-border-bottom-black bg-white-transparent-4 rounded-0"
                            placeholder="**********" required>
                        <div class=" invalid-feedback text-warning">
                            پر کردن این فیلد ضروریست.
                        </div>
                    </div>
                </div>
                <div class="col-12 my-2 py-2  bg-white text-center clearfix">
                    <a href="/" class="btn btn-outline-info float-md-left mx-2 my-3">بازگشت به سایت</a>
                    <button type="submit" class="btn btn-success float-md-left mx-2 my-3">ورود</button>
                    <div class="custom-control custom-checkbox my-md-3 pt-md-2 mr-sm-2 float-md-right">
                        <input id="remember" name="remember" type="checkbox" class="custom-control-input float-md-right"
                            id="remember" value="yes">
                        <label class="custom-control-label text-dark" for="remember">به خاطر
                            بسپار</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>